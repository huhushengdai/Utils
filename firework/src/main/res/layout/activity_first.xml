<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/christmasTree"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:src="@mipmap/shu2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/gift1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_gift2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/christmasTree"
        app:layout_constraintStart_toStartOf="@id/christmasTree"
        app:layout_constraintTop_toTopOf="@id/christmasTree"
        app:layout_constraintVertical_bias="0.92"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/gift2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_gift3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/christmasTree"
        app:layout_constraintEnd_toEndOf="@id/christmasTree"
        app:layout_constraintTop_toTopOf="@id/christmasTree"
        app:layout_constraintVertical_bias="0.95"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/gift4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_gift11"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/gift1"
        app:layout_constraintEnd_toEndOf="@id/gift3"
        app:layout_constraintStart_toStartOf="@id/gift1"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/gift5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/ic_gift9"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/gift2"
        app:layout_constraintEnd_toStartOf="@id/gift2"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/gift7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_gift12"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/gift5"
        app:layout_constraintTop_toTopOf="@id/gift2"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/gift6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="37dp"
        android:src="@mipmap/ic_gift6"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/gift3"
        app:layout_constraintEnd_toStartOf="@id/gift5"
        app:layout_constraintStart_toEndOf="@id/gift3"
        app:layout_constraintTop_toTopOf="@id/gift5"
        tools:visibility="visible" />


    <View
        android:id="@+id/guideline2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/christmasTree"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/gift3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_gift8"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/christmasTree"
        app:layout_constraintEnd_toEndOf="@id/christmasTree"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@id/christmasTree"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/christmasMan"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/laoren"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/christmasTree"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/christmasTree"
        tools:visibility="visible" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/christmasMan"
        app:layout_constraintEnd_toEndOf="@id/christmasMan"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#f36"
        android:textSize="16sp"
        android:alpha="0"
        app:layout_constraintStart_toEndOf="@id/line1"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="@id/christmasMan"
        app:layout_constraintBottom_toTopOf="@id/christmasMan"
        android:text="Merry Christmas\n有份礼物送给你"
        android:background="@drawable/bg_session"
        />

    <ImageView
        android:id="@+id/forGift"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:onClick="toStart"
        android:src="@mipmap/ic_gift5"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@id/christmasTree"
        app:layout_constraintEnd_toEndOf="@id/christmasTree"
        app:layout_constraintStart_toStartOf="@id/christmasTree"
        app:layout_constraintTop_toTopOf="@id/christmasTree"
         />

</androidx.constraintlayout.widget.ConstraintLayout>